<%= shoppe_stripe_javascript %>

<h2>Make your payment</h2>


<%= form_tag nil, class: "stripeForm" do %>
  <%= hidden_field_tag "stripe_token", nil, "data-stripe" => "token" %>

<div class="payment-errors"></div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="card-holder-name">Name on Card</label>
  <div class="col-sm-9">
    <input type="text" class="form-control holdername" name="holdername" id="holdername" placeholder="Card Holder's Name" autofocusd >
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="card-number">Card Number</label>
  <div class="col-sm-9">
    <%= text_field_tag :card_number, nil, name: "cc","data-stripe" => "number", :class =>"form-control ",:placeholder => "Debit/Credit Card Number" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
  <div class="col-sm-9">
    <div class="row">
      <div class="col-xs-5">
        <%= select_month nil, {add_month_numbers: true}, {"data-stripe" => "exp_month", name: nil, id: "card_month", class: " form-control col-sm-4 exp"}%>
      </div>
      <div class="col-xs-5">
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10},
        {name: nil, id: "card_year",class: " form-control exp", "data-stripe" => "exp_year"}%>
      </div>
    </div>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
  <div class="col-sm-3">
    <%= text_field_tag :card_code, nil, name: "cvvNumber", "data-stripe" => "cvc", :class => "form-control ",:placeholder => "CVV" %>
  </div>
</div>

<%= submit_tag "Continue" , class: "btn col-sm-3 btn-success center-block disabled"%>
</div>
<% end %>